<div class="container content-offest">
  <div class="card">
    <div class="container">
      <div class = "row">
        <div class = 'col s12'>
          <br>
          <% if @areplaylist.has_dup %>
            <%= link_to 'Remove Duplicates', playlist_path, method: 'delete', :id => 'delete-link', :class => 'waves-effect waves-light btn #7cb342 light-green darken-1 white-text' %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <h3><%= @areplaylist.name%></h3>
        </div>
      </div>
      <div class = "row">
        <div class = 'col s12'>
          <table class="highlight">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Album</th>
                <th>Artist</th>
              </tr>
            </thead>
            <tbody>
              <% i = 1 %>
              <% @areplaylist.playlist_tracks.each do |track| %>
                <tr>
                  <td class='tableIndex'><%= i %></td>
                  <td class='tableTrackName'><%= track.track.name%></td>
                  <td class='tableArtistName'>
                    <%track.track.artists.each do |artist| %>
                      <%=artist.name%>
                    <% end %>
                  </td>
                  <td class='tableAlbumName'><%= track.track.album.name%></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
