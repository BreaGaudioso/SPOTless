  <div class = "row">
    <div class = 'col-xs-4 col-centered text-center'>
      <h4 class="text-muted"><%= link_to 'Remove Duplicates', playlist_path, method: 'delete'  %></h4>
  </div>
</div>


  <div class = "row">
    <div class = 'col-xs-6 col-centered'>
      <table class="table table-hover table-condensed text-right">
        <thead>
          <tr>
            <th> </th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% i = 1 %>
          <% @areplaylist.playlist_tracks.each do |track| %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= track.track.name%></td>
            </tr>
            <% i += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


