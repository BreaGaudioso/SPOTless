<!DOCTYPE html>
<html>
<head>
  <title>SpotlessApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</head>
<header>
</header>
<body>

  <div class="cotainer">
    <div class="row">
      <% if @user %>
        <nav class='col-sm-2'>
          <ul class="nav nav-pills nav-stacked">
            <li class='nav-username'><%=@user.spotify_user_id.titlecase%></li>
            <li>Your playlist</li>
            <% @user.playlists.each do |playlist| %>
              <li>
                <%=link_to playlist.name, playlist_path(playlist)%>
              </li>
            <% end %>
          </ul>
        </nav>
        <% end %>
      <div class="col-sm-10">
        <% flash.each do |key, value| %>
          <% if key == "alert" %>
            <%= content_tag :div, value, class: "text-center alert alert-danger" %>
          <% else %>
            <%= content_tag :div, value, class: "text-center alert alert-success" %>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
<script type="text/javascript">
  $(function() {
    setTimeout(function() {
        $(".alert").hide()
    }, 3000);
  });
</script>
</html>
